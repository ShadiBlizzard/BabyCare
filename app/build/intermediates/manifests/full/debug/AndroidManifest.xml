        <activity android:name="com.example.shadi.babycare.layout_view.MessagesListActivity" />
        <activity android:name="com.example.shadi.babycare.layout_view.ResRequestActivity" />
        <activity
            android:name="com.example.shadi.babycare.layout_view.PolicyActivity"
            android:parentActivityName="com.example.shadi.babycare.layout_view.BaseActivity" />
        <activity android:name="com.example.shadi.babycare.layout_view.ReservationsListActivity" />
        <activity android:name="com.example.shadi.babycare.layout_view.SearchingActivity" />
        <activity android:name="com.example.shadi.babycare.layout_view.ReviewListActivity" />
        <activity android:name="com.example.shadi.babycare.layout_view.ReviewFormActivity" />
        <activity android:name="com.example.shadi.babycare.layout_view.ReviewActivity" />
        <activity android:name="com.example.shadi.babycare.layout_view.HomeActivity" />
        <activity android:name="com.example.shadi.babycare.layout_view.RegistrationKoActivity" />
