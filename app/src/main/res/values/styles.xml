<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/toolbar2</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/text_color_babycare</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BabyCare" parent="Theme.AppCompat.Light.DarkActionBar" >
        <item name="android:colorBackground">@color/babycare_background</item>
        <item name="android:textColorPrimary">@color/text_color_babycare</item>
        <item name="android:textSize">22dp</item>
        <item name="colorPrimaryDark">@color/toolbar2</item>
        <item name="colorPrimary">@color/toolbar2</item>
        <item name="colorAccent">@color/button_babycare_normal</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textColorSecondaryInverse">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.AppCompat.Button.Custom">
        <item name="android:textColor">@color/toolbar2</item>
    </style>

</resources>
