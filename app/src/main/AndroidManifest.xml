<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.shadi.babycare">

    <!-- adding permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature android:name="android.hardware.location.gps" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="BabyCare"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/BabyCare"
        tools:replace="android:label">
        <activity
            android:name=".layout_view.MainActivity"
            android:theme="@style/BabyCare">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".layout_view.LoginActivity"
            android:parentActivityName=".layout_view.MainActivity">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".layout_view.MainActivity" />
        </activity>
        <activity
            android:name=".layout_view.Register0Activity"
            android:parentActivityName=".layout_view.Register1Activity" />
        <activity
            android:name=".layout_view.Register1Activity"
            android:parentActivityName=".layout_view.MainActivity" />
        <activity android:name=".layout_view.RegistrationOkActivity" />
        <activity android:name=".layout_view.BaseActivity" />
        <activity
            android:name=".layout_view.Register2Activity"
            android:parentActivityName=".layout_view.Register0Activity" />
        <activity
            android:name=".layout_view.Register3Activity"
            android:parentActivityName=".layout_view.Register2Activity" />
        <activity
            android:name=".layout_view.Register4Activity"
            android:parentActivityName=".layout_view.Register3Activity" />
        <activity android:name=".layout_view.MessagesListActivity" />
        <activity android:name=".layout_view.ResRequestActivity" />
        <activity
            android:name=".layout_view.PolicyActivity"
            android:parentActivityName=".layout_view.BaseActivity" />
        <activity android:name=".layout_view.ReservationsListActivity" />
        <activity android:name=".layout_view.SearchingActivity" />
        <activity android:name=".layout_view.ReviewListActivity" />
        <activity android:name=".layout_view.ReviewFormActivity" />
        <activity android:name=".layout_view.ReviewActivity" />
        <activity android:name=".layout_view.HomeActivity" />
        <activity android:name=".layout_view.RegistrationKoActivity" />
        <activity android:name=".layout_view.ProfileListActivity" />
        <activity android:name=".layout_view.ProfileParFromBsActivity" />
        <activity android:name=".layout_view.ResultsListActivity" />
        <activity android:name=".layout_view.ProfileBsFromBsActivity" />
        <activity android:name=".layout_view.ProfileParFromParActivity" />
        <activity android:name=".layout_view.ReservationDetailsActivity" />
        <activity android:name=".layout_view.ReservingActivity" />
        <activity android:name=".layout_view.OkActivity" />
        <activity android:name=".layout_view.HomeParentActivity" />
        <activity android:name=".layout_view.KoActivity" />
        <activity android:name=".layout_view.ResRequestAnswerActivity" />
        <activity android:name=".layout_view.SetAvailabilityActivity" />
        <activity android:name=".layout_view.SetAvailabilityHourActivity" />
        <activity android:name=".layout_view.HomeBabysitterActivity" />
        <activity android:name=".layout_view.ProfileBsFromParActivity" />
        <activity android:name=".layout_view.UpdateProfileActivity" />
        <activity android:name=".layout_view.HomeAdminActivity" />
        <activity android:name=".layout_view.ProfileUserFromAdmin"></activity>
    </application>

</manifest>