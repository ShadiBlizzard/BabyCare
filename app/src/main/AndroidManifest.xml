<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shadi.babycare">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/BabyCare">
        <activity
            android:name=".layout_view.MainActivity"
            android:theme="@style/BabyCare">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".layout_view.LoginActivity"
            android:parentActivityName=".layout_view.MainActivity">
            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".layout_view.MainActivity" />

        </activity>
    </application>
    
    <!--adding internet connection permission-->
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

</manifest>